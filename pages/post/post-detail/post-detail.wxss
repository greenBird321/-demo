.detailContainer {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.author-date {
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}

.author {
  /* font-size: 26rpx; */
  vertical-align: middle;
  margin-left: 20rpx;
  font-weight: 300;
  color: #666;
}

.const-text {
  color: #999;
  margin-left: 15px;
}

.title {
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
  font-weight: 700;
  font-size: 40rpx;
}

.share-btn{
  /* margin-right: 30rpx; */
  vertical-align: middle;
  margin-left: 50rpx;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  letter-spacing: 2px;
  line-height: 44px;
}

.music-icon {
  height: 110rpx;
  width: 102rpx;
  position: absolute;
  left: 50%;
  top: 180rpx;
  opacity: 0.5;
  margin-left: -51rpx;
}
