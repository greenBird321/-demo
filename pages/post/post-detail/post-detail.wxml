<!-- 先静后动，先样式后数据 -->
<view class='detailContainer'>
  <image  catchtap='onHeadImageTap' data-imageInfo="{{ postData.headImgSrc }}"  class='head-image' src="{{postData.headImgSrc}}"></image>
  <image class='music-icon' src='/images/music/music-start.png'></image>
  <view class='author-date'>
    <image class='avatar' src="{{postData.avatar}}"></image>
    <text class='author'>{{ postData.author }}</text>
    <text class='const-text'>发表于</text>
    <text class='author'>{{ postData.dateTime }}</text>
  </view>
  <text class='title'>{{ postData.title }}</text>
  <view class='tool'>
    <view class='circle-img'>
      <image src='/images/icon/collection.png'></image>
      <image class='share-img' src='/images/icon/share.png'></image>
    </view>
    <!-- 横线 -->
    <view class='horizon'></view>
  </view>
  <text class='detail'>{{ postData.detail }}</text>
</view>